{
  "name": "plaax-nodejs",
  "version": "1.0.0",
  "description": "A backend layer for PLAAX service, build with NodeJS and Typescript.",
  "//": [
    "package.scripts.sh wraps some multi-steps operations to make package.json cleaner.",
    "$SHELL is needed to run the bash scripts with the current shell instead of /bin/bash."
  ],
  "engines": {
    "node": ">=18.12.1 <19.0.0",
    "npm": ">=9.5.0 < 10.0.0"
  },
  "scripts": {
    "init": "chmod +x ./package.scripts.sh && $SHELL ./package.scripts.sh --install",
    "init-prd": "chmod +x ./package.scripts.sh && $SHELL ./package.scripts.sh --install-prd",
    "clean": "$SHELL ./package.scripts.sh --clean",
    "reset-init": "$SHELL ./package.scripts.sh --reset-init",
    "ts-check": "npx tsc --noEmit",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "lint-debug": "DEBUG=eslint:cli-engine npm run lint",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-aws-lambdas": "jest ./src/app/awsLambdas/src ./src/core",
    "test-server": "jest ./src/app/server/src ./src/core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giacomoratta/plaax-nodejs.git"
  },
  "author": "",
  "license": "GPU 3.0",
  "bugs": {
    "url": "https://github.com/giacomoratta/plaax-nodejs/issues"
  },
  "homepage": "https://github.com/giacomoratta/plaax-nodejs#readme",
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.370.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "pino": "^8.14.2"
  }
}
