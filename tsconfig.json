{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "jest.config.js",
    "**/*.test.ts",
    "**/__tests__"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
